<html>
    <body>
        <h1>Simple Calc</h1>
        <p id="add"></p>
        <p id="sub"></p>
        <p id="mul"></p>
        <p id="div"></p>
        <script>
            var num1= 10;
            var num2= 2;
            var add= num1 + num2;
            var sub= num1 - num2;
            var mul= num1 * num2;
            var div= num1 / num2;
            document.getElementById("add").innerHTML=
            "The added value is =" + add;
            document.getElementById("sub").innerHTML=
            "The added value is =" + sub;
            document.getElementById("mul").innerHTML=
            "The added value is =" + mul;
            document.getElementById("div").innerHTML=
            "The added value is =" + div;
        </script>
    </body>
</html>